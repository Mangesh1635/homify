<% layout("/layouts/boilerplate")%>

<div class="row mt-3">
  <!-- <h1 class="col-7 offset-3 mb-3">Signup on Homify</h1> -->
  <div class="col-7 offset-3">
    <form action="/signup" method="POST" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="username" class="form-lable">Username</label>
        <input
          type="text"
          name="username"
          id="username"
          placeholder="Enter User Name"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks Good</div>
        <div class="invalid-feedback">Please enter username</div>
      </div>

      <div class="mb-3">
        <label for="email" class="form-lable">Email</label>
        <input
          type="email"
          name="email"
          id="email"
          placeholder="Enter email"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please Enter Email</div>
      </div>

      <div class="mb-3">
        <label for="password" class="form-lable">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          placeholder="Enter Password"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please Password</div>
      </div>

      <button class="btn btn-dark add-btn offset-5">Sign-Up</button>
    </form>
  </div>
</div>
